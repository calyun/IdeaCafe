<% include ../partials/header %>
<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Add New Comment to <%= talk.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/talks/<%= talk._id %>/comments" method="POST">
                <div class="form-group">
                      <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group"></div>
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                
            <!-- linking between foods page -->
            <a href="/foods">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>