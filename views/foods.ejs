<% include partials/header %>

<!-- Many bootstrap classes. Experiment! -->

<!-- containers add nice adaptive spacing -->
<div class="container">
    <!-- bootstrap styling classes~~~ -->
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to BreadCheck! </h1>
            <p> The foods available to eat are: </p>
            <p>
                <a class="btn btn-lg btn-primary" href="/foods/new">Post New Food</a>
            </p>
        </div>
    </header>

    
    <a href="/"> Home </a>
    
    <div class="row">
        <div class="col-lg-l2">
            <h3> Best Foods To Eat Today </h3>
        </div>
    </div>
    
    <!-- grids: responsive imagery (col class)-->
    <!-- grid: adaptive (display flex) -->
    <div class="row" style="display:flex; flex-wrap:wrap;">
    <% foods.forEach(function(food){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= food.image %>">
                <div class="caption">
                    <h4> <%= food.name %> </h4>
                    <h4> <%= food.expiration %> </h4>
                </div>
            </div>
        </div>
    <% }); %>
    </div>
    
</div>

<% include partials/footer %>
