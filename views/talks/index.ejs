<% include ../partials/header %>

<!-- Many bootstrap classes. Experiment! -->

<!-- containers add nice adaptive spacing -->
<div class="container">
    <!-- bootstrap styling classes~~~ -->
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to IdeaCafe! </h1>
            <p> Browse our gallery of TED talks or submit your own! </p>
            <p>
                <a class="btn btn-lg btn-primary" href="/talks/new">Post New Talk</a>
            </p>
        </div>
    </header>

    
    <a href="/"> Home </a>
    
    <div class="row">
        <div class="col-lg-l2">
            <h3> Best Talks To Watch Today </h3>
        </div>
    </div>
    
    <!-- grids: responsive imagery (col class)-->
    <!-- grid: adaptive (display flex) -->
    <div class="row" style="display:flex; flex-wrap:wrap;">
    <% talks.forEach(function(talk){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= talk.image %>">
                <div class="caption">
                    <h4> <%= talk.name %> </h4>
                    <h4> <%= talk.description %> </h4>
                </div>
                <p>
                    <a href="/talks/<%= talk._id %>" class="btn btn-primary"
                    style="float: right"> Descr </a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>
