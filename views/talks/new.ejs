<% include ../partials/header %>
<div class="container">
    
    <div class="row">
        
        <h1 style="text-align: center;">Submit a New Talk</h1>
        <!-- width, top/bot left/right margins, -->
        <div style="width: 30%; margin: 30px auto;">
            <form action="/talks" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="video" placeholder="video url (required)">
                </div>
                <div class="form-group">
                      <input class="form-control" type="text" name="name" placeholder="name (optional)">
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="text" name="image" placeholder="image url">-->
                <!--</div>-->
                <!--EVENTUAL: Use php file to get the thumbnail url from the video embed-->
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description (optional)">
                </div>
                <div class="form-group"></div>
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
                
            <!-- linking between talks page -->
            <a href="/talks">Go Back</a>
        </div>
    </div>
</div>

